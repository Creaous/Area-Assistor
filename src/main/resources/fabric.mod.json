{
  "schemaVersion": 1,
  "id": "minecalc",
  "version": "${version}",

  "name": "MineCalc",
  "description": "MineCalc lets you select block positions and calculates the area and how many of the tool you're holding you need to clear the area!",
  "authors": [
    "ThePhaseCat",
    "trainb0y"
  ],
  "contact": {
    "homepage": "https://github.com/ThePhaseCat/MineCalc-Mod",
    "sources": "https://github.com/ThePhaseCat/MineCalc-Mod"
  },

  "license": "CC0-1.0",
  "icon": "assets/minecalc/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "com.areaassistor.AreaAssistor"
    ],
    "client": [
      "com.areaassistor.AreaAssistorClient"
    ]
  },
  "mixins": [
    "areaareaassistor.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.14.19",
    "fabric-api": "*",
    "minecraft": "1.19.4",
    "java": ">=17"
  }
}
